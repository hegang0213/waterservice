<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/touch_background"
    android:paddingStart="@dimen/paddingLeft"
    android:paddingTop="@dimen/paddingTop"
    android:paddingRight="@dimen/paddingRight"
    android:paddingEnd="@dimen/paddingBottom">
    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iiv_icon="cmd-arrow-right-bold-box-outline"
        app:iiv_color="@android:color/holo_blue_dark"
        app:iiv_size="16dp"/>
    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="main"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/icon"/>
    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/normalGray"
        android:text="sub"
        android:layout_toRightOf="@id/icon"
        android:layout_below="@id/mainText"/>
</RelativeLayout>